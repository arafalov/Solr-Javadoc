<?xml version="1.0" encoding="UTF-8" ?>
<schema version="1.5">
  <fields>
    <field name="id"      type="string" indexed="true" stored="true" required="true" />
    <field name="type"    type="string" indexed="true" stored="true" required="true" />
	<field name="package" type="fullText" indexed="true" stored="true" />
	<field name="class"   type="fullText" indexed="true" stored="true" />
	<field name="method"  type="fullText" indexed="true" stored="true" />
	<field name="field"   type="fullText" indexed="true" stored="true" />

	<field name="description" type="string" stored="true" indexed="false" /> <!-- this is what we show to the user -->
  </fields>
  <uniqueKey>id</uniqueKey>
  <types>
    <fieldType name="string" class="solr.StrField" />

	<fieldType name="fullText" class="solr.TextField" >
		<analyzer>
			<tokenizer class="solr.KeywordTokenizerFactory"/>
			<filter class="solr.WordDelimiterFilterFactory" preserveOriginal="1" />
			<filter class="solr.LowerCaseFilterFactory" />
		</analyzer>
	</fieldType>
	
  </types>
</schema>

